* {
    border: none;
    border-radius: 10px;
    font-family: "Noto Sans", sans-serif;
    font-size: 12px;
    min-height: 0;
}

window#waybar {
    background: rgba(34, 34, 34, 0.8);
    color: #ffffff;
    border-radius: 10px;
    margin: 10px 0 0 0;
}

#workspaces {
    background: rgba(255, 255, 255, 0.1);
    margin: 5px;
    padding: 0px 5px;
    border-radius: 10px;
}

#workspaces button {
    padding: 0 2px;
    background: transparent;
    color: #ffffff;
    border-bottom: 2px solid transparent;
}

#workspaces button.active {
    border-bottom: 2px solid #ffffff;
}

#clock {
  font-size: 24px;
}
#tray,
#custom-launcher,
#custom-filemanager,
#custom-browser,
#custom-systemsettings,
#custom-home,
#custom-show-desktop {
    font-size: 12px;
    padding: 0 7px;
    margin: 5px 0px;
}

/*#pulseaudio, #pulseaudio#mic {
  font-size: 12px;
  padding: 0 2px;
}*/

#pulseaudio, #pulseaudio#mic, #network, #show-desktop, #clock#calendar {
    font-size: 24px;
    padding: 0 15px;
}
